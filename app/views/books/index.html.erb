<div class="container">
  
  <!-- 共通テンプレートからbookの投稿エラーメッセージを呼び出し -->
  <%= render 'error', book:@book %>
  
  <div class="row">
    
    <div class="col-md-3">
      <!-- 共通テンプレートからuser-infoを呼び出し -->
      <%= render 'users/user_info', user:@user %>
      <!-- 共通テンプレートからnew-bookを呼び出し -->
      <%= render 'new_book', book:@book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
        
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
  
  </div>
</div>
