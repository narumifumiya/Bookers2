<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      
      <div>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        
        <div>
          <%= link_to edit_user_path(@user) do %>
           <p class="row btn btn-block btn-outline-secondary"><i class="fas fa-user-cog"></i></p>
         <% end %>
        </div>
        
      </div>

      <div>
        <h2>New book</h2>
          <%= form_with model: @newbook do |f| %>
            <div class="form-group">
              <label for="title">Title</label><br>
              <%= f.text_field :title, id: "title", class: "form-control" %>
            </div>
            
            <div class="form-group">
            <label for="body">Opinion</label><br>
            <%= f.text_area :body, id: "body", class: "form-control"%>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
      </div>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100, 100) %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, @book %></td>
              <td><%= @book.body %></td>
              
              <td>
                <!-- もし、投稿者 == 現在ログインしているユーザだったら  -->
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger"%>
                <% end %>
              </td>  
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  
  
  </div>
</div>