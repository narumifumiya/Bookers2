<div class="container">
  <div class="row">
    
    <div class="col-md-3">

      <div>
        <h2>New book</h2>
          <%= form_with model: @newbook do |f| %>
            <div class="form-group">
              <label for="title">Title</label><br>
              <%= f.text_field :title, id: "title", class: "form-control" %>
            </div>
            
            <div class="form-group">
            <label for="body">Opinion</label><br>
            <%= f.text_area :body, id: "body", class: "form-control"%>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
      </div>
    </div>
    
    <div class="col-md-8">
      <div>
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100, 100) %><br>
                <%= @book.user.name %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              
              <td>
                <!-- もし、投稿者 == 現在ログインしているユーザだったら  -->
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book) %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
              </td>
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  
  
  </div>
</div>