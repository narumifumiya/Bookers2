<div class="container">
  <div class="row">
    
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <!-- 共通テンプレートから@bookの投稿エラーメッセージを呼び出し -->
      <%= render 'error', book:@book %>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
          <%= f.text_field :title, id: "title", class: "form-control" %>
        </div>
        
        <div class="form-group">
        <label for="body">Opinion</label><br>
        <%= f.text_area :body, id: "body", class: "form-control"%>
        </div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>
      
      <div>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path  %>
      </div>
    </div>
    
  </div>
</div>